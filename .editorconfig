root = true

[*]
max_line_length = 100
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = tab
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

[*.{yml,yaml,scm}]
indent_style = space
indent_size = 2
tab_width = 2

[*.py]
indent_style = space
indent_size = 2
tab_width = 2

[*.md]
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false
